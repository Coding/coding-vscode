{
  "name": "coding-plugin",
  "description": "Coding plugin for VS Code.",
  "version": "1.0.0",
  "publisher": "alcheung",
  "license": "MIT",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codingPlugin.show",
    "onCommand:codingPlugin.login",
    "onView:mrTreeView"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cangzhang/coding-vscode.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codingPlugin.show",
        "title": "Show coding tree",
        "category": "Coding plugin"
      },
      {
        "command": "codingPlugin.login",
        "title": "Login coding.net",
        "category": "Coding plugin"
      },
      {
        "command": "codingPlugin.logout",
        "title": "Logout coding.net",
        "category": "Coding plugin"
      },
      {
        "command": "codingPlugin.refresh",
        "title": "Refresh",
        "category": "Coding plugin",
        "icon": {
          "light": "src/assets/refresh.light.svg",
          "dark": "src/assets/refresh.dark.svg"
        }
      },
      {
        "command": "codingPlugin.switchRepo",
        "title": "Switch repo",
        "category": "Coding plugin"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codingPlugin.refresh",
          "when": "view == mrTreeView",
          "group": "navigation"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "mrTreeView",
        "contents": "Please login first.\n[Login](command:codingPlugin.login)",
        "when": "!loggedIn"
      },
      {
        "view": "mrTreeView",
        "contents": "No merge request for now.\n[Create Merge Request](command:codingPlugin.createMr)",
        "when": "noMRResult && loggedIn"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codingPluginTree",
          "title": "CODING",
          "icon": "src/assets/coding.svg"
        }
      ]
    },
    "views": {
      "codingPluginTree": [
        {
          "id": "mrTreeView",
          "name": "Merge Requests",
          "icon": "src/assets/coding.svg",
          "contextualTitle": "List"
        },
        {
          "id": "releaseTreeView",
          "name": "Releases",
          "icon": "src/assets/coding.svg",
          "contextualTitle": "List"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "cd src/typings && npx vscode-dts master && npx vscode-dts dev master",
    "vscode:prepublish": "npm run compile",
    "compile": "npm-run-all -p compile:*",
    "compile:extension": "tsc -p ./src",
    "compile:webviews": "webpack --config webpack.config.js",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc -watch -p ./src",
    "watch:webviews": "webpack --watch --mode development",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@risingstack/react-easy-state": "^6.3.0",
    "got": "^11.7.0",
    "keytar": "^7.0.0",
    "ky": "^0.24.0",
    "nanoid": "^3.1.16",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "simple-git": "^2.21.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "css-loader": "^5.0.0",
    "eslint": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.3",
    "webpack": "4",
    "webpack-cli": "^4.0.0"
  }
}
